<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<artifactId>bs-ear</artifactId>   
	<packaging>ear</packaging>
	<name>BookStore EAR</name>

	<parent>
		<groupId>com.ericsson.bookstore</groupId>
		<artifactId>bookstore</artifactId>
		<version>1.0</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.ericsson.bookstore</groupId>
			<artifactId>bs-persistence</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>	
		<dependency>
			<groupId>com.ericsson.bookstore</groupId>
			<artifactId>bs-ejbservice</artifactId>
			<version>${project.parent.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.ericsson.bookstore</groupId>
			<artifactId>bs-weblayer</artifactId>
			<version>${project.parent.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<directory>build</directory>
		<finalName>${project.parent.artifactId}-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${version.plugin.ear}</version>
			</plugin>
		</plugins>
	</build>   

</project>
